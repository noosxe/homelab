[Unit]
Description=step-ca service
Documentation=https://smallstep.com/docs/step-ca
Documentation=https://smallstep.com/docs/step-ca/certificate-authority-server-production
Wants=network-online.target
After=docker.service
Requires=docker.service
ConditionFileNotEmpty={{ ca_dir }}/{{ config_file }}
ConditionFileNotEmpty={{ ca_dir }}/{{ password_file }}

[Service]
User={{ ca_user }}
Group={{ ca_user }}
WorkingDirectory={{ ca_dir }}
Restart=on-failure
ExecStartPre=/usr/bin/docker pull {{ step_ca_image }}
ExecStart=/usr/bin/docker run --rm --name %n --cap-add=CAP_NET_BIND_SERVICE --expose=443 --volume={{ ca_dir }}:/etc/step-ca {{ step_ca_image }} /usr/local/bin/step-ca --password-file={{ ca_dir }}/{{ password_file }} {{ ca_dir }}/{{ config_file }}
KillMode=none
Type=exec

[Install]
WantedBy=default.target
